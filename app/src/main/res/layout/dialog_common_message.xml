<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MDWrapWrap.Vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_302"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:background="@drawable/dialog_common_message_bg"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text"
            android:gravity="center"
            tools:text="标题"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            style="@style/MDMatchWrap"/>

        <TextView
            android:id="@+id/content_text"
            tools:text="内容展示区域"
            android:maxLines="3"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/black"
            style="@style/MDMatchWrap"/>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            style="@style/MDMatchWrap.Horizontal">

            <TextView
                android:text="取消"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                style="@style/MDAutoWrap"/>

            <View
                android:layout_width="1px"
                android:background="@color/color_black_50"
                android:layout_height="match_parent"/>

            <TextView
                android:text="确定"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                style="@style/MDAutoWrap"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MDMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MDWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MDWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MDMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MDMatchAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="MDAutoMatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MDAutoWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MDMatchAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MDMatchAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MDMatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MDMatchWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MDWrapWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MDWrapMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MDWrapWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MDMatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MDMatchMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MDAutoMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MDAutoWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MDAutoMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MDAutoWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>


</resources>